<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ua.com.kathien.donorua.fragments.CenterInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_center_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/colorAccent"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="Test Text for name"
            />


        <include
            android:id="@+id/center_name_divider"
            layout="@layout/item_divider" />

        <LinearLayout
            android:id="@+id/center_ll_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/center_info_ic_address"
                android:src="@drawable/ic_vector_map_marker"
                style="@style/IconStyle"/>
            <TextView
                android:id="@+id/center_info_text_address"
                style="@style/InfoPageText"/>
        </LinearLayout>

        <include
            android:id="@+id/center_address_divider"
            layout="@layout/item_divider" />

        <LinearLayout
            android:id="@+id/center_ll_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/center_info_ic_phone"
                android:src="@drawable/ic_vector_phone"
                style="@style/IconStyle"/>
            <TextView
                android:id="@+id/center_info_text_phone"
                style="@style/InfoPageText"/>
        </LinearLayout>

        <include
            android:id="@+id/center_phone_divider"
            layout="@layout/item_divider"/>

        <LinearLayout
            android:id="@+id/center_ll_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/center_info_ic_about"
                app:srcCompat="@drawable/ic_vector_information"
                style="@style/IconStyle"/>
            <TextView
                android:id="@+id/center_info_text_about"
                style="@style/InfoPageText"/>
        </LinearLayout>

        <include
            android:id="@+id/center_about_divider"
            layout="@layout/item_divider"/>

        <LinearLayout
            android:id="@+id/center_ll_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/center_info_ic_description"
                android:src="@drawable/ic_vector_clipboard_text"
                style="@style/IconStyle"/>
            <TextView
                android:id="@+id/center_info_text_description"
                style="@style/InfoPageText"/>
        </LinearLayout>

        <include
            android:id="@+id/center_description_divider"
            layout="@layout/item_divider"/>

        <LinearLayout
            android:id="@+id/center_ll_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/center_info_ic_email"
                android:src="@drawable/ic_vector_email"
                style="@style/IconStyle"/>
            <TextView
                android:id="@+id/center_info_text_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/info_unknown"
                android:textColor="@color/textColorPrimary"
                android:textSize="16sp"/>
        </LinearLayout>

        <include
            android:id="@+id/center_email_divider"
            layout="@layout/item_divider"/>

        <LinearLayout
            android:id="@+id/center_ll_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/center_info_ic_website"
                app:srcCompat="@drawable/ic_vector_web"
                style="@style/IconStyle"/>
            <TextView
                android:id="@+id/center_info_text_website"
                style="@style/InfoPageText"/>
        </LinearLayout>

        <include
            android:id="@+id/center_website_divider"
            layout="@layout/item_divider"/>

        <LinearLayout
            android:id="@+id/center_ll_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">
            <ImageView
                android:id="@+id/center_info_ic_gender"
                app:srcCompat="@drawable/ic_vector_gender_male"
                style="@style/IconStyle"/>
            <TextView
                android:id="@+id/cener_info_text_gender"
                style="@style/InfoPageText"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
