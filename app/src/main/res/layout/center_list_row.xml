<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/icon_center_list"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/health" />

    <TextView
        style="@style/BigRedHeaderFont"
        android:text="Center name"
        android:id="@+id/text_center_name"
        android:layout_alignTop="@+id/icon_center_list"
        android:layout_toRightOf="@+id/icon_center_list"
        android:layout_toEndOf="@+id/icon_center_list" />

    <TextView
        style="@style/TextInfoFont"
        android:text="New Text"
        android:id="@+id/text_center_address"
        android:layout_below="@+id/text_center_name"
        android:layout_toRightOf="@+id/icon_center_list"
        android:layout_toEndOf="@+id/icon_center_list"  />
</RelativeLayout>