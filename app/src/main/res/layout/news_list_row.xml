<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/news"
        android:id="@+id/icon_news_list"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"/>

    <TextView
        style="@style/BigRedHeaderFont"
        android:text="News title"
        android:id="@+id/text_news_title"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/icon_news_list"
        android:layout_toEndOf="@id/icon_news_list" />

    <TextView
        style="@style/TextInfoFont"
        android:text="News Text News Text News Text News Text News Text News Text News Text"
        android:id="@+id/text_news_content"
        android:layout_below="@+id/text_news_title"
        android:layout_toRightOf="@id/icon_news_list"
        android:layout_toEndOf="@id/icon_news_list" />
</RelativeLayout>