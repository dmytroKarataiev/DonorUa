<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:focusable="false">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/recipient_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/recipient_icon"
        android:focusable="false" />

    <TextView
        style="@style/BigRedHeaderFont"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="New Text"
        android:id="@+id/recipient_name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/recipient_icon"
        android:layout_toLeftOf="@+id/donor_count"
        android:layout_toStartOf="@+id/donor_count"
        android:focusable="false" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="23"
        android:id="@+id/donor_count"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="16dp"
        android:textColor="#424242"
        android:singleLine="true"
        android:textAlignment="center"
        android:textSize="32sp"
        android:maxLines="1"
        android:maxWidth="80dp"
        android:gravity="center"
        android:textStyle="bold"
        android:focusable="false" />

    <TextView
        style="@style/TextInfoFont"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="New Text"
        android:id="@+id/blood_type"
        android:layout_below="@+id/recipient_name"
        android:layout_toRightOf="@+id/recipient_icon"
        android:layout_toLeftOf="@+id/donor_count"
        android:layout_toStartOf="@+id/donor_count"
        android:focusable="false" />

    <TextView
        style="@style/TextInfoFont"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="New Text"
        android:id="@+id/city_name"
        android:layout_below="@+id/blood_type"
        android:layout_toRightOf="@+id/recipient_icon"
        android:layout_toLeftOf="@+id/donor_count"
        android:layout_toStartOf="@+id/donor_count"
        android:focusable="false" />
</RelativeLayout>