<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ua.com.kathien.donorua.fragments.RecipientInfoFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_recipient_name"
        android:text="Recipient Info Fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_vertical"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold"/>
    <include
        android:id="@+id/recipient_name_divider"
        layout="@layout/item_divider" />

    <LinearLayout
        android:id="@+id/ll_recipient_blood_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/recipient_info_ic_blood"
            android:src="@drawable/ic_vector_blood_type"
            style="@style/IconStyle"/>
        <TextView
            android:id="@+id/text_recipient_info_blood"
            style="@style/InfoPageText"/>
    </LinearLayout>
    <include
        android:id="@+id/recipient_blood_type_divider"
        layout="@layout/item_divider" />

    <LinearLayout
        android:id="@+id/ll_recipient_blood_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/recipient_info_ic_center"
            android:src="@drawable/ic_vector_hospital_building"
            style="@style/IconStyle"/>
        <TextView
            android:id="@+id/text_recipient_info_center"
            style="@style/InfoPageText"/>
    </LinearLayout>
    <include
        android:id="@+id/recipient_blood_center_divider"
        layout="@layout/item_divider" />

    <LinearLayout
        android:id="@+id/ll_recipient_contact_person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/recipient_info_ic_contact_person"
            android:src="@drawable/ic_vector_contact_person"
            style="@style/IconStyle"/>
        <TextView
            android:id="@+id/text_recipient_info_contact_person"
            style="@style/InfoPageText"/>
    </LinearLayout>
    <include
        android:id="@+id/recipient_contact_person_divider"
        layout="@layout/item_divider" />

    <LinearLayout
        android:id="@+id/ll_recipient_contact_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ic_recipient_info_contact_email"
            android:src="@drawable/ic_vector_email"
            style="@style/IconStyle"/>
        <TextView
            android:id="@+id/text_recipient_info_contact_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/info_unknown"
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp"/>
    </LinearLayout>
    <include
        android:id="@+id/recipient_contact_email_divider"
        layout="@layout/item_divider" />

    <LinearLayout
        android:id="@+id/ll_recipient_contact_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ic_recipient_info_contact_phone"
            android:src="@drawable/ic_vector_phone"
            style="@style/IconStyle"/>
        <TextView
            android:id="@+id/text_recipient_info_contact_phone"
            style="@style/InfoPageText"/>
    </LinearLayout>
    <include
        android:id="@+id/recipient_contact_phone_divider"
        layout="@layout/item_divider" />

    <LinearLayout
        android:id="@+id/ll_recipient_disease"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ic_recipient_info_disease"
            android:src="@drawable/ic_vector_disease"
            style="@style/IconStyle"/>
        <TextView
            android:id="@+id/text_recipient_info_disease"
            style="@style/InfoPageText"/>
    </LinearLayout>
    <include
        android:id="@+id/recipient_disease_divider"
        layout="@layout/item_divider" />

    <LinearLayout
        android:id="@+id/ll_recipient_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ic_recipient_description"
            android:src="@drawable/ic_vector_ghost"
            style="@style/IconStyle"/>
        <TextView
            android:id="@+id/text_recipient_description"
            style="@style/InfoPageText"/>
    </LinearLayout>
    <include
        android:id="@+id/recipient_description_divider"
        layout="@layout/item_divider" />

    <LinearLayout
        android:id="@+id/ll_recipient_date_added"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ic_recipient_date_added"
            android:src="@drawable/ic_vector_date_added"
            style="@style/IconStyle"/>
        <TextView
            android:id="@+id/text_recipient_date_added"
            style="@style/InfoPageText"/>
    </LinearLayout>
    <include
        android:id="@+id/recipient_date_added_divider"
        layout="@layout/item_divider" />

</LinearLayout>


</android.support.v4.widget.NestedScrollView>
